<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookReviewApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/orange</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <!-- Status Bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!-- Splash 화면 테마 -->
    <style name="Theme.BookReviewApp.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/orange</item>
        <item name="android:windowBackground">@color/orange</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="31">@drawable/splash</item>
    </style>
</resources>